<section class="container py-4">
  <%= render partial: "shared/notice", notice: notice %>

  <h1>Экзамены</h1>

  <table class="table">
    <thead>
    <tr>
      <th>ID</th>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @examinations.each do |exam| %>
      <tr>
        <td><%= exam.id %></td>
        <td><%= exam.title %></td>
        <td><%= link_to 'Показать', exam %></td>
        <td><%= link_to 'Редактировать', edit_examination_path(exam) %></td>
        <td><%= link_to 'Удалить', exam, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Добавить экзамен', new_examination_path, class: 'btn btn-primary' %>
</section>