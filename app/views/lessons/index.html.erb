<section class="container">
  <p id="notice"><%= notice %></p>

  <h1>Уроки</h1>

  <table class="table">
    <thead>
    <tr>
      <th>ID</th>
      <th>Название</th>
      <th>Курс</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.id %></td>
        <td><%= lesson.title %></td>
        <td><%= lesson.course_id %></td>
        <td><%= link_to 'Показать', lesson %></td>
        <td><%= link_to 'Редакатировать', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'Удалить', lesson, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Новый урок', new_lesson_path, class: 'btn btn-primary' %>

</section>