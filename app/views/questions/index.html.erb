<section class="container py-4">
  <%= render partial: "shared/notice", notice: notice %>

  <h1>Вопросы</h1>

  <table class="table">
    <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.title %></td>
        <td><%= link_to 'Показать', question %></td>
        <td><%= link_to 'Редактировать', edit_question_path(question) %></td>
        <td><%= link_to 'Удалить', question, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Добавить вопрос', new_question_path, class: 'btn btn-primary' %>
</section>